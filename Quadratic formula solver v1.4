//quadratic equation solver, I got bored of them so I enslaved a machine to do it for me.

import java.io.*;
import java.util.*;
public class quadSolver{
    public static void main(String[] args)throws InterruptedException{
        Scanner scan= new Scanner(System.in);
        while (true){
            // entering variables
            System.out.println("A?");
            double a=scan.nextDouble();
            System.out.println("B?");
            double b=scan.nextDouble();
            System.out.println("C?");
            double c=scan.nextDouble();
            System.out.println("the answer is:");
            //lets add some binomial math, shall we?
            double AC=a*c;
            boolean match=false;
            double p=0;
            double q=0;
            while (match==false) {
                p++;
                q=AC/p;
                if (AC%p==0) {
                    if ((p+q)==b){
                        match=true;
                    }else{
                        match=false;
                    }
                }
            }
            System.out.println("binomial factoring thing is "+ a+"x^2 + "+p+"x +"+q+"x +" + c +", I'm sure you can figure it out from here. my creator might add more later when he's feeling more productive.     ");
            //vertex point
            Double[] vertex={null,null};
            //vertex x and y
            double vx=((-b)/(2*a));
            double vy=((a*Math.pow(vx,2))+(b*vx)+c);
            vertex[0]=vx;
            vertex[1]=vy;
            if (a<0){
                System.out.println("The vertex is a maximum");
            } else {
                System.out.println("the vertex is a minimum");
            }
            System.out.println("the vertex is "+Arrays.toString(vertex));
            System.out.println();
            //3 points to the left and right of vertex.
            ArrayList<String> answers= new ArrayList<String>();
            for (int i=0; i<7;i++){
                answers.add("("+((vx-3)+i)+","+((a*Math.pow(((vx-3)+i), 2))+(b*((vx-3)+i))+c)+")");
            }
            String[] ans={};
            ans=answers.toArray(ans);
            System.out.println("The points to graph are: "+Arrays.toString(ans));
            //vertex form
            System.out.println("vertex form is: "+ a+"(x-"+vx+")^2 + "+ vy);
            Thread.sleep(1000);
        }
    }
}
